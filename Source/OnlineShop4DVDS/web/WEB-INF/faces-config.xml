<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
    <validator>
        <validator-id>astrologer.EmailValidator</validator-id>
        <validator-class>dvd.libraries.EmailValidator</validator-class>
    </validator>
    <navigation-rule>
        <from-view-id>/Dashboard/Login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/Dashboard/View/Index.xhtml</to-view-id>
            <redirect>></redirect>
        </navigation-case>
    </navigation-rule>
</faces-config>
